// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vendor {
  id          String    @id @default(cuid())
  name        String    @unique
  email       String?
  phone       String?
  address     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  invoices    Invoice[]
  
  @@map("vendors")
}

model Invoice {
  id              String    @id @default(cuid())
  invoiceNumber   String    @unique
  vendorId        String
  customerName   String?
  issueDate       DateTime
  dueDate         DateTime?
  status          String    // "paid", "pending", "overdue"
  subtotal        Decimal   @db.Decimal(12, 2)
  tax             Decimal   @db.Decimal(12, 2)
  total           Decimal   @db.Decimal(12, 2)
  currency        String    @default("EUR")
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  vendor          Vendor    @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  lineItems       LineItem[]
  payments        Payment[]
  
  @@map("invoices")
  @@index([vendorId])
  @@index([issueDate])
  @@index([status])
}

model LineItem {
  id          String    @id @default(cuid())
  invoiceId   String
  description String
  quantity    Decimal   @db.Decimal(10, 2)
  unitPrice   Decimal   @db.Decimal(12, 2)
  category    String?
  total       Decimal   @db.Decimal(12, 2)
  createdAt   DateTime  @default(now())
  
  invoice     Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  @@map("line_items")
  @@index([invoiceId])
  @@index([category])
}

model Payment {
  id          String    @id @default(cuid())
  invoiceId   String
  amount      Decimal   @db.Decimal(12, 2)
  paymentDate DateTime
  method      String?   // "bank_transfer", "credit_card", etc.
  reference   String?
  createdAt   DateTime  @default(now())
  
  invoice     Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  @@map("payments")
  @@index([invoiceId])
  @@index([paymentDate])
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  
  @@map("categories")
}

model File {
  id          String    @id @default(cuid())
  name        String
  fileName    String
  fileType    String    // "pdf", "docx", "xlsx", etc.
  fileSize    Int       // in bytes
  filePath    String?   // path to stored file
  url         String?   // URL if stored externally
  uploadedBy  String?   // user ID
  departmentId String?
  tags        String[]  @default([])
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  department  Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  
  @@map("files")
  @@index([uploadedBy])
  @@index([departmentId])
  @@index([createdAt])
}

model Department {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  budget      Decimal?  @db.Decimal(12, 2)
  color       String?   // hex color code
  avatar      String?   // avatar/icon URL
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  users       User[]
  files       File[]
  
  @@map("departments")
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  role        String    @default("user") // "admin", "manager", "user"
  status      String    @default("active") // "active", "inactive", "suspended"
  departmentId String?
  avatar      String?
  phone       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  department  Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  
  @@map("users")
  @@index([email])
  @@index([departmentId])
  @@index([status])
}

model Setting {
  id          String    @id @default(cuid())
  key         String    @unique
  value       String    // JSON string for complex values
  category    String    @default("general") // "general", "notifications", "security", "database", "api"
  description String?
  updatedAt   DateTime  @updatedAt
  updatedBy   String?
  
  @@map("settings")
  @@index([category])
}

model ChatHistory {
  id          String    @id @default(cuid())
  userId      String?   // Optional user ID for multi-user support
  sessionId   String    // Session identifier
  role        String    // "user" or "assistant"
  content     String    // Message content
  sql         String?   // Generated SQL query (if applicable)
  data        String?   // JSON string of query results
  explanation String?   // Explanation of the query
  createdAt   DateTime  @default(now())
  
  @@map("chat_history")
  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
}
